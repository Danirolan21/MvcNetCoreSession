@{

	string json =
		Context.Session.GetString("MASCOTA");
	Mascota mascota = null;
	if(Context.Session.Get("MASCOTA") != null){
		mascota =
		HelperJsonSession.DeserializeObject<Mascota>(json);
	}
}

<h1>Ejemplos Session</h1>

<h2 style="color: blue">
	@Context.Session.GetString("nombre")
</h2>

<h2 style="color: red">
	@Context.Session.GetString("hora")
</h2>

@if (mascota != null){
	<h2 style="color: red">
		@mascota.Nombre | @mascota.Raza | @mascota.Edad
	</h2>
}

<ul class="list-group">
	<li class="list-group-item">
		<a asp-controller="EjemploSession"
		asp-action="SessionSimple">
			Session Simple
		</a>
	</li>
	<li class="list-group-item">
		<a asp-controller="EjemploSession"
		   asp-action="SessionMascota">
			Session Mascota
		</a>
	</li>
	<li class="list-group-item">
		<a asp-controller="EjemploSession"
		   asp-action="SessionCollection">
			Session Colección
		</a>
	</li>
	<li class="list-group-item">
		<a asp-controller="EjemploSession"
		   asp-action="SessionMascotaJson">
			Session Mascota JSON
		</a>
	</li>
	<li class="list-group-item">
		<a asp-controller="EjemploSession"
		   asp-action="SessionMascotaObject">
			Session Mascota Object
		</a>
	</li>
</ul>